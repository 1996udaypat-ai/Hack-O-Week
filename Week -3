<script>
// Countdown
const targetDate = new Date("March 15, 2026 09:00:00").getTime();

setInterval(() => {
  const now = new Date().getTime();
  const diff = targetDate - now;
  document.getElementById("days").innerText = Math.floor(diff / (1000 * 60 * 60 * 24));
  document.getElementById("hours").innerText = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
  document.getElementById("mins").innerText = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
  document.getElementById("secs").innerText = Math.floor((diff % (1000 * 60)) / 1000);
}, 1000);

// Form -> CSV download
document.getElementById('regForm').onsubmit = (e) => {
  e.preventDefault();

  const row = [
    document.getElementById('fullName').value,
    document.getElementById('email').value,
    document.getElementById('phone').value,
    document.getElementById('prn').value,
    document.getElementById('semester').value,
    document.getElementById('section').value,
    document.getElementById('teamName').value,
    document.getElementById('teamSize').value,
    document.getElementById('event').value,
    new Date().toISOString()
  ];

  const header = [
    'Full Name','College Email','Phone Number','PRN',
    'Semester','Section','Team Name','Team Size','Event','Timestamp'
  ];

  const csvContent = [header, row]
    .map(r => r.map(v => `"${String(v).replace(/"/g, '""')}"`).join(','))
    .join('\r\n');

  const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
  const url = URL.createObjectURL(blob);

  const a = document.createElement('a');
  a.href = url;
  a.download = 'techfest_registrations.csv';
  document.body.appendChild(a);
  a.click();
  document.body.removeChild(a);
  URL.revokeObjectURL(url);

  alert('Application received! A CSV file with your entry has been downloaded. You can open it in Excel.');
  e.target.reset();
};
</script>
